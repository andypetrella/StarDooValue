{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "command": "dotnet",
        "type": "process",
        "args": [
          "build",
          "${workspaceFolder}/StarDooValueMod/StarDooValue.csproj",
          "/property:GenerateFullPaths=true",
          "/consoleloggerparameters:NoSummary"
        ],
        "problemMatcher": "$msCompile",
        "group": {
          "kind": "build"        
        }
      },
      {
        "label": "copy-content-pack",
        "type": "shell",
        "command": "xcopy",
        "args": [
          "${workspaceFolder}\\StarDooValueContent",
          "C:\\Program Files (x86)\\Steam\\steamapps\\common\\Stardew Valley\\Mods\\StarDooValueContent",
          "/E",
          "/I",
          "/Y"
        ],
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": false
        },
        "dependsOn": "build"
      },
      {
        "label": "dev",
        "command": "dotnet",
        "type": "process",
        "args": [
          "watch",        
          "build",
          "--project",
          "${workspaceFolder}/StarDooValueMod/StarDooValue.csproj",
          "--",
          "/property:GenerateFullPaths=true",
          "/consoleloggerparameters:NoSummary"
        ],
        "problemMatcher": "$msCompile",
        "group": {
          "kind": "build",
          "isDefault": true   
        }
      },
      {
        "label": "publish",
        "command": "dotnet",
        "type": "process",
        "args": [
          "publish",
          "${workspaceFolder}/StarDooValueMod/StarDooValue.csproj",
          "/property:GenerateFullPaths=true",
          "/consoleloggerparameters:NoSummary"
        ],
        "problemMatcher": "$msCompile"
      },
      {
        "label": "watch",
        "command": "dotnet",
        "type": "process",
        "args": [
          "watch",
          "run",
          "--project",
          "${workspaceFolder}/StarDooValueMod/StarDooValue.csproj"
        ],
        "problemMatcher": "$msCompile",      
        "dependsOn": "build",
        "isBackground": true
      }
    ]
  }